@{
    var title = string.IsNullOrWhiteSpace(ViewData["Title"] as string)
        ? "Tomeshelf Executor"
        : ViewData["Title"];
    var now = DateTimeOffset.UtcNow;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>@title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/styles.css" asp-append-version="true"/>
</head>
<body class="d-flex flex-column min-vh-100 text-light bg-dark">
<header class="py-4 border-bottom border-secondary-subtle bg-dark">
    <div class="container">
        <h1 class="h3 mb-1">@title</h1>
        <p class="mb-0 text-secondary">Manually execute service endpoints when Swagger is unavailable and monitor upcoming scheduled runs.</p>
    </div>
</header>
<main class="flex-fill py-4">
    @RenderBody()
</main>
<footer class="footer bg-dark-subtle text-secondary py-3 mt-auto">
    <div class="container text-center text-md-start">
        <small>Last updated @now:dd MMM yyyy HH:mm:ss 'UTC'</small>
    </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
<script src="~/app.js" asp-append-version="true" defer></script>
</body>
</html>
