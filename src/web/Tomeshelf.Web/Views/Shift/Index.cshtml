@model Tomeshelf.Web.Models.Shift.ShiftIndexViewModel
@{
    ViewData["Title"] = "SHiFT Codes";
}

<div class="shift-shell">
    <section class="shift-hero">
        <div class="shift-hero__eyebrow">Gaming utilities</div>
        <h1 class="shift-hero__title">SHiFT Codes</h1>
        <p class="shift-hero__subtitle">
            Redeem codes across every configured SHiFT account and see the outcome per service.
        </p>
    </section>

    <section class="shift-layout">
        <div class="shift-card">
            <h2 class="h5">Redeem a code</h2>
            <p class="text-muted">Paste a code and launch it across all accounts.</p>

            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form asp-action="Redeem" method="post" class="mt-3">
                <div class="mb-3">
                    <label class="form-label" for="ShiftCode">SHiFT code</label>
                    <input id="ShiftCode"
                           name="Code"
                           class="form-control shift-input"
                           value="@Model.Code"
                           autocomplete="off"
                           placeholder="e.g. ABCDE-FGHIJ-KLMNO"/>
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-lightning-charge me-1" aria-hidden="true"></i>Redeem code
                </button>
            </form>
        </div>
        <div class="shift-results">
            @if (Model.Response is
                 { } response)
            {
                <div class="shift-summary">
                    <div class="shift-summary-card">
                        <div class="shift-summary-value">@response.Summary.Total</div>
                        <div class="shift-summary-label">Total</div>
                    </div>
                    <div class="shift-summary-card">
                        <div class="shift-summary-value">@response.Summary.Succeeded</div>
                        <div class="shift-summary-label">Succeeded</div>
                    </div>
                    <div class="shift-summary-card">
                        <div class="shift-summary-value">@response.Summary.Failed</div>
                        <div class="shift-summary-label">Failed</div>
                    </div>
                </div>
                <div class="shift-card">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h2 class="h5 mb-0">Redemption results</h2>
                        <span class="text-muted small">@response.Summary.Succeeded/@response.Summary.Total succeeded</span>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead class="table-light">
                            <tr>
                                <th scope="col">Account</th>
                                <th scope="col">Service</th>
                                <th scope="col">Status</th>
                                <th scope="col">Details</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var result in response.Results)
                            {
                                var message = string.IsNullOrWhiteSpace(result.Message)
                                    ? result.ErrorCode?.ToString()
                                    : result.Message;
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@result.Email</div>
                                        <div class="text-muted small">ID @result.AccountId</div>
                                    </td>
                                    <td>@result.Service</td>
                                    <td>
                                        <span class="badge @(result.Success
                                                               ? "text-bg-success"
                                                               : "text-bg-danger")">
                                            @(result.Success
                                                ? "Succeeded"
                                                : "Failed")
                                        </span>
                                    </td>
                                    <td class="text-muted small">@message</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="shift-empty">
                    <div class="fs-3 mb-2">
                        <i class="bi bi-ticket-perforated" aria-hidden="true"></i>
                    </div>
                    <div class="fw-semibold">No redemptions yet</div>
                    <div class="small">Enter a code to see results by account.</div>
                </div>
            }
        </div>
    </section>
</div>