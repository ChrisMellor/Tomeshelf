@model Tomeshelf.Web.Models.Mcm.McmEventsConfigViewModel
@{
    ViewData["Title"] = "MCM Event Configuration";
}

<div class="page-header mb-4">
    <div>
        <div class="page-subtitle">Events</div>
        <h1 class="page-title">MCM Event Configuration</h1>
        <p class="page-subtitle">Manage the events shown under Events â†’ MCM in the navbar.</p>
    </div>
</div>

@if (TempData["StatusMessage"] is string statusMessage)
{
    <div class="alert alert-success">@statusMessage</div>
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<section class="mb-5">
    <h2 class="h4">Configured events</h2>

    @if (Model.Events.Count == 0)
    {
        <p class="text-muted">No events have been configured yet.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var evt in Model.Events)
                {
                    <tr>
                        <td class="text-break"><code>@evt.Id</code></td>
                        <td>@evt.Name</td>
                        <td class="text-end">
                            <form asp-action="Delete" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@evt.Id"/>
                                <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Delete @evt.Name (@evt.Id)?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</section>

<section>
    <h2 class="h4">Add or update an event</h2>
    <p class="text-muted">Using an existing ID will update that event's name.</p>

    <form asp-action="Upsert" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <div class="row g-3">
            <div class="col-12 col-md-4">
                <label asp-for="Editor.Id" class="form-label"></label>
                <input asp-for="Editor.Id" class="form-control" autocomplete="off" placeholder="e.g. London"/>
                <span asp-validation-for="Editor.Id" class="text-danger small"></span>
            </div>
            <div class="col-12 col-md-8">
                <label asp-for="Editor.Name" class="form-label"></label>
                <input asp-for="Editor.Name" class="form-control" autocomplete="off" maxlength="30" placeholder="e.g. MCM London Comic Con"/>
                <div class="form-text">Max 30 characters.</div>
                <span asp-validation-for="Editor.Name" class="text-danger small"></span>
            </div>
            <div class="col-12 d-flex align-items-center gap-2">
                <button type="submit" class="btn btn-primary">Save event</button>
                <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

