@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Tomeshelf";
}

<div class="home-hero rounded-3 p-4 p-md-5 mb-4">
    <h1 class="display-6 mb-2">Tomeshelf</h1>
    <p class="lead mb-3">
        A personal space to track events and bring together a handful of small tools I find useful.
        It's simple, fast, and focused on my own workflow.
    </p>
    <div class="text-muted small mt-2">No accounts. No noise. Just the tools.</div>
</div>
<div class="row g-3 mb-4">
    <div class="col-12 col-sm-8 col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h2 class="h5 card-title mb-2"><i class="bi bi-ticket-perforated-fill me-1" aria-hidden="true"></i> Comic Con</h2>
                <p class="text-muted mb-3">Jump into guest listings by city, broken down by the date they were added</p>
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-primary" asp-controller="ComicCon" asp-action="Index" asp-route-city="London"><i class="bi bi-geo-alt-fill me-1" aria-hidden="true"></i> London</a>
                    <a class="btn btn-outline-secondary" asp-controller="ComicCon" asp-action="Index" asp-route-city="Birmingham"><i class="bi bi-geo-alt-fill me-1" aria-hidden="true"></i> Birmingham</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-8 col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h2 class="h5 card-title mb-2"><i class="bi bi-bag-heart-fill me-1" aria-hidden="true"></i> Humble Bundles</h2>
                <p class="text-muted mb-3">Track current Humble Bundle offers with live countdowns and quick links.</p>
                <a class="btn btn-primary" asp-controller="Bundles" asp-action="Index"><i class="bi bi-lightning-fill me-1" aria-hidden="true"></i> Browse bundles</a>
            </div>
        </div>
    </div>
</div>